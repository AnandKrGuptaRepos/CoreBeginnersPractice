@model IEnumerable<Employee>

@{

    ViewBag.Title = "Emplyee List Details";
}
<div class="card-deck">
    @foreach (var item in Model)
    {
        string ImagePath = "~/Images/" + (item.PhotoPath ?? "download.jpg");
        <div class="card m-3" style="min-width:18rem; max-height:30.5%">
            <div class="card-header">
                <h3>@item.Name</h3>
            </div>
            <img class="card-img-top thumbnal" src="@ImagePath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.EncryptedId" class="btn btn-primary m-1">View</a>
                <a asp-controller="Home" asp-action="Update" asp-route-id="@item.EncryptedId" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }

</div>



@section Scripts{
    <script src="~/js/CustomJavaScript.js"></script>

}