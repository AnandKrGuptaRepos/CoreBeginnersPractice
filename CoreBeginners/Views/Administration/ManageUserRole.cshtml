@model List<UserRoleViewModel>

@{
    ViewBag.Title = "Edit User Role";
    var Userid = ViewBag.UserId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Manage User Roles</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model[i].RoleId" />
                    <input hidden asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                </div>
            }
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@Userid" style="width:auto;" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>