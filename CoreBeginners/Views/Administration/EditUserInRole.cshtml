@model List<UserRoleViewModel>
@{ 
    var roleid = ViewBag.RoleId;
}
<form method="post" asp-route-roleid="@roleid">
    <div class="card">
        <div class="card-header">
            <h2>Add or Remove users from this role</h2>
        </div>
        <div class="card-body">
            @for(int i=0; i<Model.Count; i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Update" style="width:auto"/>
            <a asp-action="EditRole" asp-controller="Administration" class="btn btn-danger" asp-route-Id="@roleid">Cancel</a>
        </div>
    </div>
</form>